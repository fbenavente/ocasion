<?xml version="1.0" encoding="UTF-8"?>
<form>
    <fields name="elementAttrs">
        <fieldset name="elementAttrsFieldSet">
            <!-- <field
                    type="list"
                    name="wrapper"
                    id="wrapper"
                    default="div"
                    label="Wrapper"
                    description="Wrapper">
                <option value="div">div</option>
                <option value="hr">hr</option>
                <option value="br">br</option>
            </field> -->
            <field
                    type="list"
                    name="color"
                    id="color"
                    default="grey"
                    label="Color"
                    description="Separator color">
                <option class="blue" value="blue">Blue</option>
                <option class="turquoise" value="turquoise">Turquoise</option>
                <option class="pink" value="pink">Pink</option>
                <option class="violet" value="violet">Violet</option>
                <option class="peacoc" value="peacoc">Peacoc</option>
                <option class="chino" value="chino">Chino</option>
                <option class="mulled_wine" value="mulled_wine">Mulled Wine</option>
                <option class="vista_blue" value="vista_blue">Vista Blue</option>
                <option class="black" value="black">Black</option>
                <option class="grey" value="grey" selected="selected">Grey</option>
                <option class="orange" value="orange">Orange</option>
                <option class="sky" value="sky">Sky</option>
                <option class="green" value="green">Green</option>
                <option class="juicy_pink" value="juicy_pink">Juicy pink</option>
                <option class="sandy_brown" value="sandy_brown">Sandy brown</option>
                <option class="purple" value="purple">Purple</option>
                <option class="white" value="white">White</option>
                <option class="custom" value="custom">Custom color</option>
            </field>
           
            <field
                    type="list"
                    name="style"
                    id="style"
                    label="Style"
                    description="Separator Style" >
                <option class="border" value="border">Border</option>
                <option class="dashed" value="dashed">Dashed</option>
                <option class="dotted" value="dotted">Dotted</option>
                <option class="double" value="double">Double</option>
            </field>

            <field
                    type="list"
                    name="width"
                    id="width"
                    label="Element width"
                    description="Separator element width in percent" >
                <option class="100" value="100">100%</option>
                <option class="90" value="90">90%</option>
                <option class="80" value="80">80%</option>
                <option class="70" value="70">70%</option>
                <option class="60" value="60">60%</option>
                <option class="50" value="50">50%</option>
            </field>
            <field
                    type="text"
                    name="extraclass"
                    id="extraclass"
                    default=""
                    label="Extra Class"
                    description="If you wish to style particular content element differently, then use this field to add a class name and then refer to it in your css file."
                    />
            <field 
                name="layout" label="Shortcode Layout"  description="Shortcode Layout" type="AzuraShortcodelayout" shortcode="azuraseparator" client="site"/>
        </fieldset>
    </fields>
    <fields name="elementSettings">
        <fieldset name="elementSettingsFieldSet">
            <field
                    type="AzuraElementSetting"
                    name="showStyleTab"
                    setting="true"
                    default="true"/>
            <field
                    type="AzuraElementSetting"
                    name="numberLeftSettings"
                    setting="all"
                    default="all"/>
            <field
                    type="AzuraElementSetting"
                    name="contentFirst"
                    setting="false"
                    default="false"/>
        </fieldset>
    </fields>
</form>