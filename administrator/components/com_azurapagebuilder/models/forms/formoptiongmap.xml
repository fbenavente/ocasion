<?xml version="1.0" encoding="UTF-8"?>
<form>
    <fields name="elementAttrs">
        <fieldset name="elementAttrsFieldSet">
            <field
                    type="text"
                    name="id"
                    id="id"
                    label="ID"
                    description="ID"/>

            <field
                    type="text"
                    name="extraclass"
                    id="extraclass"
                    label="Extra Class"
                    description="Extra Class"
                    />
            <field
                    type="text"
                    name="mapheight"
                    id="mapheight"
                    label="Map Height"
                    description="Enter map height in pixels. Example: 250 or leave it empty to make map responsive."
                    />
            <field
                    type="AzuraGMapSelect"
                    name="selectMap"
                    id="selectMap"
                    class="input-medium"
                    label="Select Map"
                    description="Select Map Coordinates">
            </field>
            <field
                    type="text"
                    name="gmaplat"
                    id="gmaplat"
                    default="44.434596"
                    label="Latitude"
                    description="Latitude"
                    />
            <field
                    type="text"
                    name="gmaplog"
                    id="gmaplog"
                    default="26.080533"
                    label="Longitude"
                    description="Longitude"
                    />
            <field
                    type="radio"
                    name="gmappancontrol"
                    id="gmappancontrol"
                    default="1"
                    class="btn-group btn-group-yesno"
                    label="Pan Control"
                    description="Pan Control"
                    >
                <option value="0">No</option>
                <option value="1">Yes</option>
            </field>
            <field
                    type="radio"
                    name="gmapzoomcontrol"
                    id="gmapzoomcontrol"
                    default="1"
                    class="btn-group btn-group-yesno"
                    label="Zoom Control"
                    description="Zoom Control"
                    >
                <option value="0">No</option>
                <option value="1">Yes</option>
            </field>
            <field
                    type="radio"
                    name="gmaptypecontrol"
                    id="gmaptypecontrol"
                    default="1"
                    class="btn-group btn-group-yesno"
                    label="Type Control"
                    description="Type Control"
                    >
                <option value="0">No</option>
                <option value="1">Yes</option>
            </field>
            <field
                    type="radio"
                    name="gmapstreetviewcontrol"
                    id="gmapstreetviewcontrol"
                    default="0"
                    class="btn-group btn-group-yesno"
                    label="Street view Control"
                    description="Street view Control"
                    >
                <option value="0">No</option>
                <option value="1">Yes</option>
            </field>
            <field
                    type="radio"
                    name="gmapscrollwheel"
                    id="gmapscrollwheel"
                    default="0"
                    class="btn-group btn-group-yesno"
                    label="Scroll Wheel"
                    description="Scroll Wheel"
                    >
                <option value="0">No</option>
                <option value="1">Yes</option>
            </field>
            <field 
                name="gmapzoom" id="gmapzoom" 
                type="text" default="5" 
                label="Zoom" 
                description="Zoom" />

            <field 
                name="gmaptypeid" id="gmaptypeid"
                type="list" 
                default="ROADMAP" 
                label="Map Type" 
                description="Map Type" >
                    <option value="HYBRID">HYBRID</option>
                    <option value="ROADMAP">ROADMAP</option>
                    <option value="SATELLITE">SATELLITE</option>
                    <option value="TERRAIN">TERRAIN</option>
            </field>
            
        </fieldset>
    </fields>
