<?xml version="1.0" encoding="UTF-8"?>
<form>
    <fields name="elementAttrs">
        <fieldset name="elementAttrsFieldSet">
            <field
                    type="text"
                    name="id"
                    id="id"
                    label="Slide ID"
                    description="Slide ID" />

            <field
                    type="text"
                    name="class"
                    id="class"
                    label="Slide Class"
                    description="Slide Class"
                    />
            <field
                    type="AzuraMedia"
                    name="slideimage"
                    id="slideimage"
                    label="Slide Photo"
                    class="input-small"
                    preview="false"
                    description="Slide Photo"
                    />
            <field 
                name="layout" label="Shortcode Layout"  description="Shortcode Layout" type="AzuraShortcodelayout" shortcode="azurabxslideritem" client="site"/>
        </fieldset>
    </fields>
    <fields name="elementSettings">
        <fieldset name="elementSettingsFieldSet">
            <field
                    type="AzuraElementSetting"
                    name="showStyleTab"
                    setting="true"
                    default="true"/>
            <field
                    type="AzuraElementSetting"
                    name="showAnimationTab"
                    setting="false"
                    default="true"/>
            <field
                    type="AzuraElementSetting"
                    name="numberLeftSettings"
                    setting="all"
                    default="all"/>
            <field
                    type="AzuraElementSetting"
                    name="contentFirst"
                    setting="false"
                    default="false"/>
        </fieldset>
    </fields>
</form>