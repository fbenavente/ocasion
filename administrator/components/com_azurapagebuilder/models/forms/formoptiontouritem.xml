        <fieldset name="elementContentFieldSet">
            <field
                    type="tinymceeditor"
                    name="ttContent"
                    id="ttContent"
                    label="Item Content (Can be use with html tags.)"
                    class="input-xlarge"
                    description="Item Content (Can be use with html tags.)"
                    cols="24"
                    rows="15" />
        </fieldset>
    </fields>
