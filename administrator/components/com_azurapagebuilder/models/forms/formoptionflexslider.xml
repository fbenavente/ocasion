            <field
                    type="text"
                    name="itemmargin"
                    id="itemmargin"
                    default="0"
                    label="itemMargin"
                    description="{Number} Margin between carousel items."
                    />
            <field
                    type="text"
                    name="minitems"
                    id="minitems"
                    default="0"
                    label="minItems"
                    description="{Number} Minimum number of carousel items that should be visible."
                    />
            <field
                    type="text"
                    name="maxitems"
                    id="maxitems"
                    default="0"
