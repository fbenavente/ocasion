<?xml version="1.0" encoding="UTF-8"?>
<form>
    <fields name="elementAttrs">
        <fieldset name="elementAttrsFieldSet">
            <field
                    type="text"
                    name="id"
                    id="id"
                    label="ID"
                    description="ID"
                     />
            <field
                    type="text"
                    name="class"
                    id="class"
                    label="Extra Class"
                    description="Extra Class"
                    default="" />
            <field
                    type="text"
                    name="title"
                    id="title"
                    label="Title"
                    description="Title"
                    />
            <field
                    type="AzuraFontIcon"
                    name="iconclass"
                    id="iconclass"
                    class="input-medium"
                    label="Icon"
                    description="Icon"
                    />
            <field
                    type="text"
                    name="link"
                    id="link"
                    label="External Link"
                    description="External Link"
                    />
            <field 
                name="layout" label="Shortcode Layout"  description="Shortcode Layout" type="AzuraShortcodelayout" shortcode="azuraicon" client="site"/>
        </fieldset>
    </fields>
    <fields name="elementContent">
        <fieldset name="elementContentFieldSet">
            <field
                    type="textarea"
                    name="introduction"
                    id="introduction"
                    label="Item Content"
                    class="input-xlarge"
                    description="Item Content"
                    cols="24"
                    rows="15" />
        </fieldset>
    </fields>
    <fields name="elementSettings">
        <fieldset name="elementSettingsFieldSet">
            <field
                    type="AzuraElementSetting"
                    name="showStyleTab"
                    setting="true"
                    default="true"/>
            <field
                    type="AzuraElementSetting"
                    name="numberLeftSettings"
                    setting="6"
                    default="all"/>
            <field
                    type="AzuraElementSetting"
                    name="contentFirst"
                    setting="false"
                    default="false"/>
        </fieldset>
    </fields>
</form>