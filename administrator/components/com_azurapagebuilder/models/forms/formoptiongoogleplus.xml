<?xml version="1.0" encoding="UTF-8"?>
<form>
    <fields name="elementAttrs">
        <fieldset name="elementAttrsFieldSet">
            <!-- <field
                    type="text"
                    name="url"
                    id="url"
                    label="Url to share"
                    description="Enter Url to share."
            /> -->
            <field
                    type="list"
                    name="size"
                    id="size"
                    default="standard"
                    label="Button Size"
                    description="Button Size" >
                <option value="small">Small</option>
                <option value="medium">Medium</option>
                <option value="standard">Standard</option>
                
                <option value="tall">Tall</option>
            </field>
            <field
                    type="list"
                    name="annotation"
                    id="annotation"
                    default="bubble"
                    label="Annotation"
                    description="Button Annotation" >
                <option value="bubble">Bubble</option>
                <option value="inline">Inline</option>
                <option value="none">None</option>
                
            </field>
            <field
                    type="text"
                    name="extraclass"
                    id="extraclass"
                    label="Extra Class"
                    description="If you wish to style particular content element differently, then use this field to add a class name and then refer to it in your css file."
            />
            <field 
                name="layout" label="Shortcode Layout"  description="Shortcode Layout" type="AzuraShortcodelayout" shortcode="azuragoogleplus" client="site"/>
        </fieldset>
    </fields>
