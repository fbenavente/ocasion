<?xml version="1.0" encoding="UTF-8"?>
<form>
    <fields name="elementContent">
        <fieldset name="elementContentFieldSet">
            <field
                    type="aceeditor"
                    name="jsScript"
                    id="jsScript"
                    label="JS Script"
                    class="textelement-content"
                    description="Please enter your javascript code (&lt;script&gt; and &lt;/script&gt; tags are require)"
                    cols="24"
                    rows="7" mode="javascript"/>
        </fieldset>
    </fields>
    <fields name="elementSettings">
        <fieldset name="elementSettingsFieldSet">
            <field
                    type="AzuraElementSetting"
                    name="showStyleTab"
                    setting="false"
                    default="true"/>
            <field
                    type="AzuraElementSetting"
                    name="showAnimationTab"
                    setting="false"
                    default="true"/>
            <field
                    type="AzuraElementSetting"
                    name="numberLeftSettings"
                    setting="all"
                    default="all"/>
            <field
                    type="AzuraElementSetting"
                    name="contentFirst"
                    setting="false"
                    default="false"/>
        </fieldset>
    </fields>
</form>