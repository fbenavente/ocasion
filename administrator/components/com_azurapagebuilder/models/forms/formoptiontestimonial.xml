<?xml version="1.0" encoding="UTF-8"?>
<form>
    <fields name="elementAttrs">
        <fieldset name="elementAttrsFieldSet">
            <field
                    type="text"
                    name="id"
                    id="id"
                    label="ID"
                    description="Wrapper ID" />

            <field
                    type="text"
                    name="class"
                    id="class"
                    label="Class"
                    description="Wrapper Class"
                    />
            <field
                    type="text"
                    name="name"
                    id="name"
                    label="Name"
                    description="Client Name" />

            <field
                    type="text"
                    name="email"
                    id="email"
                    label="Email"
                    description="Client Email"
                    />
            <field
                    type="AzuraMedia"
                    name="avatar"
                    id="avatar"
                    label="Avatar"
                    class="input-small"
                    preview="false"
                    description="Avatar" />
            <field
                    type="text"
                    name="position"
                    id="position"
                    label="Client Job"
                    description="Client Job"
                    />
            <field
                    type="list"
                    name="review"
                    id="review"
                    label="Review"
                    default="5"
                    description="Review" >
                <option value="">No</option>
                <option value="1">1 Star</option>
                <option value="1.5">1.5 Stars</option>
                <option value="2">2 Stars</option>
                <option value="2.5">2.5 Stars</option>
                <option value="3">3 Stars</option>
                <option value="3.5">3.5 Stars</option>
                <option value="4">4 Stars</option>
                <option value="4.5">4.5 Stars</option>
                <option value="5">5 Stars</option>
               
            </field>
            <field 
                name="layout" label="Shortcode Layout"  description="Shortcode Layout" type="AzuraShortcodelayout" shortcode="azuratestimonial" client="site"/>
            
        </fieldset>
    </fields>
    <fields name="elementContent">
        <fieldset name="elementContentFieldSet">
            <field
                    type="aceeditor"
                    name="textContent"
                    id="textContent"
                    label="Comment"
                    class="input-xlarge"
                    description="Comment"
                    cols="24"
                    rows="7" />
        </fieldset>
    </fields>
    <fields name="elementSettings">
        <fieldset name="elementSettingsFieldSet">
            <field
                    type="AzuraElementSetting"
                    name="showStyleTab"
                    setting="true"
                    default="true"/>
            <field
                    type="AzuraElementSetting"
                    name="showAnimationTab"
                    setting="true"
                    default="true"/>
            <field
                    type="AzuraElementSetting"
                    name="numberLeftSettings"
                    setting="5"
                    default="all"/>
            <field
                    type="AzuraElementSetting"
                    name="contentFirst"
                    setting="false"
                    default="false"/>
        </fieldset>
    </fields>
</form>