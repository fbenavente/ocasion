<?xml version="1.0" encoding="UTF-8"?>
<form>
    <fields name="elementAttrs">
        <fieldset name="elementAttrsFieldSet">
            <field
                    type="text"
                    name="receiveemail"
                    id="receiveemail"
                    default="contact.cththemes@gmail.com"
                    label="Receive Email"
                    description="Receive Email" />
            <field
                    type="text"
                    name="thanksmessage"
                    id="thanksmessage"
                    default="Thanks for subscribe our news letter!"
                    label="Thanks Message"
                    description="Thanks Message" />
            <field
                    type="textarea"
                    name="emailsubject"
                    id="emailsubject"
                    default="Subscribe News Letter"
                    label="Email Subject"
                    description="Email Subject"
                    />
            <field
                    type="text"
                    name="id"
                    id="id"
                    label="ID"
                    description="Form ID" />

            <field
                    type="text"
                    name="extraclass"
                    id="extraclass"
                    label="Extra Class"
                    description="Extra Class"
                    />

            <!-- <field 
                name="layout" label="Shortcode Layout"  description="Shortcode Layout" type="AzuraShortcodelayout" shortcode="azurasubscribe" client="site"/> -->
            
        </fieldset>
    </fields>
    <fields name="elementSettings">
        <fieldset name="elementSettingsFieldSet">
            <field
                    type="AzuraElementSetting"
                    name="showStyleTab"
                    setting="false"
                    default="true"/>
            <field
                    type="AzuraElementSetting"
                    name="showAnimationTab"
                    setting="false"
                    default="true"/>
            <field
                    type="AzuraElementSetting"
                    name="numberLeftSettings"
                    setting="0"
                    default="all"/>
            <field
                    type="AzuraElementSetting"
                    name="contentFirst"
                    setting="false"
                    default="false"/>
        </fieldset>
    </fields>
</form>