<?xml version="1.0" encoding="UTF-8"?>
<form>
    <fields name="elementAttrs">
        <fieldset name="elementAttrsFieldSet">
            <field
                    type="text"
                    name="extraClass"
                    id="extraClass"
                    label="Container Extra Class"
                    description="Container Extra Class"
                    size="80"
                    maxLength="255" />

            <field
                    type="text"
                    name="title"
                    id="title"
                    label="Container Title"
                    description="Container Title"
                    />
            <field
                    type="text"
                    name="subTitle"
                    id="subTitle"
                    label="Container Sub Title"
                    description="Container Sub Title">
            </field>
            <field
                    type="media"
                    name="bgImage"
                    id="bgImage"
                    label="Background Image"
                    description="Background Image">
            </field>
            <field
                    type="radio"
                    name="published"
                    default="1"
                    label="Published"
                    description="Published">
                <option value="0">JNO</option>
                <option value="1">JYES</option>
            </field>
            <field
    			name="language"
    			type="contentlanguage"
    			label="Language"
    			description="Select language"
    			class="inputbox">
    			<option value="*">JALL</option>
    		</field>
        </fieldset>
    </fields>
</form>