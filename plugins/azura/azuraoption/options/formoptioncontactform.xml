<?xml version="1.0" encoding="UTF-8"?>
<form>
    <fields name="elementAttrs">
        <fieldset name="elementAttrsFieldSet">
            <field
                    type="text"
                    name="title"
                    id="title"
                    class="input-xxlarge"
                    label="Title"
                    description="Title" />

            <!-- <field
                    type="textarea"
                    name="introduction"
                    id="introduction"
                    label="Introduction Text"
                    description="Introduction Text"
                    cols="20" rows="7"
                    /> -->
            
            <field
                    type="text"
                    name="receiveemail"
                    id="receiveemail"
                    class="input-xxlarge"
                    label="Receive Email"
                    description="Receive Email" />
            <field
                    type="text"
                    name="thanksmessage"
                    id="thanksmessage"
                    class="input-xxlarge"
                    label="Thanks Message"
                    description="Thanks Message" />
            <field
                    type="text"
                    name="emailsubject"
                    id="emailsubject"
                    class="input-xxlarge"
                    label="Email Subject"
                    description="Email Subject"
                    />
            
            <field
                    type="radio"
                    name="showsubject"
                    id="showsubject"
                    default="0"
                    class="btn-group btn-group-yesno"
                    label="Show Subject"
                    description="Show Subject instead of hidden field" >
                <option value="1">JYES</option>
                <option value="0">JNO</option>
            </field>
            <field
                    type="radio"
                    name="showwebsite"
                    id="showwebsite"
                    default="1"
                    class="btn-group btn-group-yesno"
                    label="Show Website Field"
                    description="Show Website Field" >
                <option value="1">JYES</option>
                <option value="0">JNO</option>
            </field>
            <field
                    type="radio"
                    name="sendascopy"
                    id="sendascopy"
                    default="0"
                    class="btn-group btn-group-yesno"
                    label="Show SendAsCopy Field"
                    description="Show SendAsCopy Field" >
                <option value="1">JYES</option>
                <option value="0">JNO</option>
            </field>

            <!-- <field
                    type="text"
                    name="id"
                    id="id"
                    label="ID"
                    description="Form ID" /> -->

            <field
                    type="text"
                    name="extraclass"
                    id="extraclass"
                    label="Extra Class"
                    description="Extra Class"
                    />

            <field 
                name="layout" label="Shortcode Layout"  description="Shortcode Layout" type="AzuraShortcodelayout" shortcode="azuracontactform" client="site"/>
            
        </fieldset>
    </fields>
    <!-- <fields name="elementContent">
        <fieldset name="elementContentFieldSet">
            <field
                    type="textarea"
                    name="contactIntro"
                    id="contactIntro"
                    label="Introduction"
                    class="textelement-content"
                    description="Introduction"
                    cols="22"
                    rows="7" />
        </fieldset>
    </fields> -->
    <fields name="elementSettings">
        <fieldset name="elementSettingsFieldSet">
            <field
                    type="AzuraElementSetting"
                    name="showStyleTab"
                    setting="true"
                    default="true"/>
            <field
                    type="AzuraElementSetting"
                    name="numberLeftSettings"
                    setting="0"
                    default="all"/>
            <field
                    type="AzuraElementSetting"
                    name="contentFirst"
                    setting="false"
                    default="false"/>
        </fieldset>
    </fields>
</form>