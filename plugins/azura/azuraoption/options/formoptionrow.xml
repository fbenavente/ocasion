<?xml version="1.0" encoding="UTF-8"?>
<form>
    <fields name="elementAttrs">
        <fieldset name="elementAttrsFieldSet">
            <field
                    type="text"
                    name="id"
                    id="id"
                    label="Section ID"
                    description="Section ID" />
            <field
                    type="text"
                    name="sec_class"
                    id="sec_class"
                    class="input-xlarge"
                    label="Section Class"
                    description="Section Class"
                    />
            <field
                    type="text"
                    name="class"
                    id="class"
                    class="input-xlarge"
                    label="Row Extraclass"
                    description="Row Extraclass"
                    />
            <field
                    type="radio"
                    name="fullwidth"
                    id="fullwidth"
                    class="btn-group btn-group-yesno"
                    default="0"
                    label="Fullwidth Section?"
                    description="Set this option to YES if you want using fullscreen width section."
                    >
                <option value="0">No</option>
                <option value="1">Yes</option>
            </field>
            <field 
                name="layout" label="Shortcode Layout"  description="Shortcode Layout" type="AzuraShortcodelayout" shortcode="azurarow" client="site"/>
        </fieldset>
    </fields>
    <fields name="elementContent">
        <fieldset name="elementContentFieldSet">
            <field
                    type="textarea"
                    name="textContent"
                    id="textContent"
                    label="Section Intro"
                    class="textelement-content"
                    description="Section Intro"
                    cols="24"
                    rows="7" />
        </fieldset>
    </fields>
    <fields name="elementSettings">
        <fieldset name="elementSettingsFieldSet">
            <field
                    type="AzuraElementSetting"
                    name="showStyleTab"
                    setting="true"
                    default="true"/>
            <field
                    type="AzuraElementSetting"
                    name="numberLeftSettings"
                    setting="0"
                    default="all"/>
            <field
                    type="AzuraElementSetting"
                    name="contentFirst"
                    setting="false"
                    default="false"/>
        </fieldset>
    </fields>
</form>