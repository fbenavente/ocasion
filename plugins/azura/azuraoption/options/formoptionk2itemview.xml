<?xml version="1.0" encoding="UTF-8"?>
<form>
    <fields name="elementAttrs">
        <fieldset name="elementAttrsFieldSet">
            <field name="k2_id" type="item" default="" label="K2_SELECT_ITEM" description="K2_SELECT_AN_ITEM_TO_LINK_TO_DIRECTLY" required="true"/>
            <field
                    type="list"
                    name="imagesize"
                    id="imagesize"
                    default="imageXSmall"
                    label="Image Size"
                    description="Image Size">
                <option value="imageXSmall">Extra Small</option>
                <option value="imageSmall">Small</option>
                <option value="imageMedium">Medium</option>
                <option value="imageLarge">Large</option>
                <option value="imageXLarge">Extra Large</option>
                <option value="imageGeneric">Generic</option>
                <option value="">None</option>
            </field>
            <field
                    type="radio"
                    name="posttype"
                    id="posttype"
                    default="0"
                    class="btn-group btn-group-yesno"
                    label="Show Custom Posttype"
                    description="Show Custom Posttype">
                <option value="1">Yes</option>
                <option value="0">No</option>
            </field>
            <field
                    type="radio"
                    name="showcreated"
                    id="showcreated"
                    default="1"
                    class="btn-group btn-group-yesno"
                    label="Show Created Date"
                    description="Show Created Date">
                <option value="1">Yes</option>
                <option value="0">No</option>
            </field>
            <field
                    type="radio"
                    name="showcategory"
                    id="showcategory"
                    default="1"
                    class="btn-group btn-group-yesno"
                    label="Show Category"
                    description="Show Category">
                <option value="1">Yes</option>
                <option value="0">No</option>
            </field>
            <field
                    type="radio"
                    name="showcomment"
                    id="showcomment"
                    default="1"
                    class="btn-group btn-group-yesno"
                    label="Show Comment"
                    description="Show Comment">
                <option value="1">Yes</option>
                <option value="0">No</option>
            </field>

            <field
                    type="radio"
                    name="showtitle"
                    id="showtitle"
                    default="1"
                    class="btn-group btn-group-yesno"
                    label="Show Title"
                    description="Show Title">
                <option value="1">Yes</option>
                <option value="0">No</option>
            </field>
            

            <field
                    type="text"
                    name="introtextlength"
                    id="introtextlength"
                    default=""
                    label="Introtext Length"
                    description="Introtext Length. Can be a number of character, hide."
                    />

            <field
                    type="radio"
                    name="showfulltext"
                    id="showfulltext"
                    default="0"
                    class="btn-group btn-group-yesno"
                    label="Show Fulltext"
                    description="Show Fulltext">
                <option value="1">Yes</option>
                <option value="0">No</option>
            </field>


            <field
                    type="radio"
                    name="showreadmore"
                    id="showreadmore"
                    default="1"
                    class="btn-group btn-group-yesno"
                    label="Show Read More"
                    description="Show Read More">
                <option value="1">Yes</option>
                <option value="0">No</option>
            </field>
