<?xml version="1.0" encoding="UTF-8"?>
<form>
    <fields name="elementAttrs">
        <fieldset name="elementAttrsFieldSet">
            <field
                    type="list"
                    name="mode"
                    id="mode"
                    label="Mode"
                    
                    default="fade"
                    description="Type of transition between slides" >
                <option value="horizontal">Horizontal</option>
                <option value="vertical">Vertical</option>
                <option value="fade">Fade</option>
            </field>
            <field
                    type="radio"
                    name="auto"
                    id="auto"
                    label="Auto"
                    class="btn-group btn-group-yesno"
                    default="0"
                    description="Slides will automatically transition" >
                <option value="1">Yes</option>
                <option value="0">No</option>
            </field>
            <field
                    type="text"
                    name="speed"
                    id="speed"
                    label="Slide Speed"
                    class="input-xlarge"
                    default="500"
                    description="Slide transition duration (in ms)"/>
            <field
                    type="radio"
                    name="pager"
                    id="pager"
                    label="Show Pagination"
                    class="btn-group btn-group-yesno"
                    default="1"
                    description="Show Pagination" >
                <option value="1">Yes</option>
                <option value="0">No</option>
            </field>
            <field
                    type="radio"
                    name="controls"
                    id="controls"
                    label="Show Controls"
                    class="btn-group btn-group-yesno"
                    default="1"
                    description="Show Controls Button" >
                <option value="1">Yes</option>
                <option value="0">No</option>
            </field>
            <field
                    type="text"
                    name="id"
                    id="id"
                    default="home"
                    label="Section ID"
                    description="Section ID used for style purpose and animated scrolling effect" />

            <field
                    type="text"
                    name="extraclass"
                    id="extraclass"
                    label="Extra Class"
                    description="Extra Class"
                    />
           <!--  <field 
                type="radio" 
                class="btn-group btn-group-yesno" 
                id="shownavigation" 
                name="shownavigation" 
                label="Show Navigation" 
                description="" default="1">
                <option value="1">Yes</option>
                <option value="0">No</option>
            </field> -->
            <!-- <field
                    type="text"
                    name="scroll_link"
                    id="scroll_link"
                    default="#intro"
                    label="Button Link"
                    description="Button Link"
                    />
            <field
                    type="text"
                    name="scroll_class"
                    id="scroll_class"
                    default="scrollto mouse"
                    label="Button Link Class"
                    description="Class for button link anchor"
                    /> -->
            <field 
                name="layout" label="Shortcode Layout"  description="Shortcode Layout" type="AzuraShortcodelayout" shortcode="azurabgcslider" client="site"/>
        </fieldset>
    </fields>
