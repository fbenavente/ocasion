<?xml version="1.0" encoding="UTF-8"?>
<form>
    <fields name="elementAttrs">
        <fieldset name="elementAttrsFieldSet">
            <field
                    type="AzuraMedia"
                    name="src"
                    id="src"
                    label="Background Image"
                    class="input-xlarge"
                    description="Background Image"
                    preview="false">
            </field>
            <field 
                type="radio" 
                class="btn-group btn-group-yesno" 
                id="overlay" 
                name="overlay" 
                label="Overlay" 
                description="" default="1">
                <option value="1">Yes</option>
                <option value="0">No</option>
            </field>
            <field
                    type="text"
                    name="extraclass"
                    id="extraclass"
                    label="Extra Class"
                    description="Extra Class"
                    />
            <field
                    type="hidden"
                    name="columnwidthclass"
                    id="columnwidthclass"
                    label="Column Width Class"
                    description="Column Width Class"
                    />
        </fieldset>
    </fields>

    <fields name="elementSettings">
        <fieldset name="elementSettingsFieldSet">
            <field
                    type="AzuraElementSetting"
                    name="showStyleTab"
                    setting="false"
                    default="true"/>
            <field
                    type="AzuraElementSetting"
                    name="showAnimationTab"
                    setting="false"
                    default="true"/>
            <field
                    type="AzuraElementSetting"
                    name="numberLeftSettings"
                    setting="0"
                    default="all"/>
            <field
                    type="AzuraElementSetting"
                    name="contentFirst"
                    setting="false"
                    default="false"/>
        </fieldset>
    </fields>
</form>