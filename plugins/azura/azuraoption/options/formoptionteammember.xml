<?xml version="1.0" encoding="UTF-8"?>
<form>
    <fields name="elementAttrs">
        <fieldset name="elementAttrsFieldSet">
            
            <field
                    type="text"
                    name="name"
                    id="name"
                    label="Name"
                    description="Member Name"  />

            <field
                    type="text"
                    name="job"
                    id="job"
                    label="Job"
                    description="Member Job"
                    />
            <field
                    type="AzuraMedia"
                    name="photo"
                    id="photo"
                    label="Photo"
                    class="input-xlarge"
                    description="Member Photo"
                    preview="false">
            </field>
            <!-- <field
                    type="text"
                    name="extraclass"
                    id="extraclass"
                    label="Extra Class"
                    description="Extra Class"
                    /> -->
            <!-- <field
                    type="hidden"
                    name="columnwidthclass"
                    id="columnwidthclass"
                    label="Column Width Class"
                    description="Column Width Class"
                    /> -->
            <!-- <field 
                name="layout" label="Shortcode Layout"  description="Shortcode Layout" type="AzuraShortcodelayout" shortcode="azurateammember" client="site"/> -->
        </fieldset>
    </fields>
    <fields name="elementContent">
        <fieldset name="elementContentFieldSet">
            <field
                    type="aceeditor"
                    name="textContent"
                    id="textContent"
                    label="Member Introduction (Can be use with html tags.)"
                    class="textelement-content"
                    description="Member Introduction (Can be use with html tags)"
                    cols="24"
                    rows="7" />
        </fieldset>
    </fields>
    <fields name="elementSettings">
        <fieldset name="elementSettingsFieldSet">
            <field
                    type="AzuraElementSetting"
                    name="showStyleTab"
                    setting="false"
                    default="true"/>
            <field
                    type="AzuraElementSetting"
                    name="showResponsiveTab"
                    setting="false"
                    default="true"/> 
            <field
                    type="AzuraElementSetting"
                    name="numberLeftSettings"
                    setting="0"
                    default="all"/>
            <field
                    type="AzuraElementSetting"
                    name="contentFirst"
                    setting="false"
                    default="false"/>
        </fieldset>
    </fields>
</form>

