<?xml version="1.0" encoding="UTF-8"?>
<form>
    <fields name="elementAttrs">
        <fieldset name="elementAttrsFieldSet">
            <field
                    type="AzuraFontIcon"
                    name="iconclass"
                    id="iconclass"
                    class="input-xlarge"
                    label="Icon Class"
                    description="Icon Class"
                    />
            <!-- <field
                    type="text"
                    name="extraclass"
                    id="extraclass"
                    label="Extra Class"
                    description="Extra Class"
                    /> -->
            <!-- <field
                    type="hidden"
                    name="columnwidthclass"
                    id="columnwidthclass"
                    label="Column Width Class"
                    description="Column Width Class"
                    /> -->
        </fieldset>
    </fields>
    <fields name="elementContent">
        <fieldset name="elementContentFieldSet">
            <field
                    type="aceeditor"
                    name="textContent"
                    id="textContent"
                    label="Content"
                    class="textelement-content"
                    description="Content"
                    cols="24"
                    rows="7" />
        </fieldset>
    </fields>
    <fields name="elementSettings">
        <fieldset name="elementSettingsFieldSet">
            <field
                    type="AzuraElementSetting"
                    name="showStyleTab"
                    setting="true"
                    default="true"/>
            <field
                    type="AzuraElementSetting"
                    name="numberLeftSettings"
                    setting="0"
                    default="all"/>
            <field
                    type="AzuraElementSetting"
                    name="contentFirst"
                    setting="false"
                    default="false"/>
        </fieldset>
    </fields>
</form>