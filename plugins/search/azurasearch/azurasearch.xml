	<creationDate>April 2015</creationDate>
	<copyright>Copyright (C) 2014 CTHthemes.com. All rights reserved.</copyright>
	<license>GNU General Public License version 2 or later; see LICENSE.txt</license>
	<authorEmail>cththemes@gmail.com</authorEmail>
	<authorUrl>www.cththemes.com</authorUrl>
	<version>2.3.0</version>
	<description>PLG_SEARCH_AZURASEARCH_XML_DESCRIPTION</description>
	<files>
		<filename plugin="azurasearch">azurasearch.php</filename>
		<folder>language</folder>
	</files>
	<languages>
		<language tag="en-GB">language/en-GB/en-GB.plg_search_azurasearch.ini</language>
		<language tag="en-GB">language/en-GB/en-GB.plg_search_azurasearch.sys.ini</language>
	</languages>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="search_limit" type="text"
					default="50"
					description="PLG_SEARCH_AZURASEARCH_FIELD_SEARCHLIMIT_DESC"
					label="PLG_SEARCH_AZURASEARCH_FIELD_SEARCHLIMIT_LABEL"
					size="5"
				/>

				<field name="search_page" type="radio"
					class="btn-group btn-group-yesno"
					default="1"
					description="PLG_SEARCH_AZURASEARCH_FIELD_AZURA_DESC"
					label="PLG_SEARCH_AZURASEARCH_FIELD_AZURA_LABEL"
				>
					<option value="1">JON</option>
					<option value="0">JOFF</option>
				</field>

				<!-- <field name="search_archived" type="radio"
					class="btn-group btn-group-yesno"
					default="0"
					description="PLG_SEARCH_AZURASEARCH_FIELD_ARCHIVED_DESC"
					label="PLG_SEARCH_AZURA_FIELD_ARCHIVED_LABEL"
				>
					<option value="1">JON</option>
					<option value="0">JOFF</option>
				</field> -->
			</fieldset>

		</fields>
	</config>
